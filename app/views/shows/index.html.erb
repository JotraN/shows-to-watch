<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <h1>Shows</h1>
  </div>
</div>
<div class="row">
    <% @shows.each_with_index do |show, index| %>
    <div class="col-md-2 <%= 'col-md-offset-3' if index % 3 == 0 %>">
      <div class="thumbnail">
        <% if show.banner %>
          <%= image_tag("http://thetvdb.com/banners/" + show.banner) %>
        <% else %>
          <p>PLACEHOLDER IMAGE</p>
        <% end %>
        <div class="caption">
          <h3><%= link_to show.name, show %></h3>
          <p><strong>Season:</strong> <%= show.season || "n/a" %></p>
          <p><strong>Episode:</strong> <%= show.episode || "n/a" %></p>
          <p><strong>Completed:</strong> <%= show.completed %></p>
          <p><%= link_to "Edit", edit_show_path(show), class: "btn btn-primary", role: "button" %></p>
        </div>
      </div>
    </div>
    <% end %>
</div>
<div class="row">
  <%= link_to 'New Show', new_show_path %>
</div>
