<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <h1>Shows to Watch</h1>
    <p>
     Placeholder text for introduction.
    </p>
  </div>
</div>
<div class="row">
    <% @shows.each_with_index do |show, index| %>
    <div class="col-md-6 col-md-offset-3">
      <%= link_to show, class: "show-box" do %>
        <% if show.banner %>
          <%= image_tag "http://thetvdb.com/banners/" + show.banner, class: "img-responsive" %>
        <% else %>
          <%= image_tag "default.jpg", class: "img-responsive" %>
        <% end %>
        <div class="show-box-caption text-uppercase">
          <div class="show-name"><h1><%= show.name %></h1></div> 
          <div class="show-footer">
            <strong>SEASON:</strong> <em><%= show.season || "N/A" %></em>
            <strong>EPISODE:</strong> <em><%= show.episode || "N/A" %></em>
            <strong>COMPLETED:</strong> <em><%= show.completed %></em>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= link_to 'New Show', new_show_path, class: "btn btn-primary btn-block" %></li>
    <% if user_signed_in? %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-primary btn-block" %></li>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: "btn btn-primary btn-block" %></li>
    <% end %>
  </div>
</div>
